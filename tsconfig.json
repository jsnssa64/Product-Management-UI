{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": "src",
      "paths": {
        "@Common/*": ["common/*"],
        "@Components/*": ["components/*"],
        "@Data/*": ["data/*"],
        "@Services/*": ["services/*"],
      } 
    },
    "exclude": ["./node_modules"],
    "compileOnSave": true
  }